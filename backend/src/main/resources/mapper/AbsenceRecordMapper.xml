<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.flinkmonitorbackend.mapper.AbsenceRecordMapper">
    <select id="findAll" resultType="com.example.flinkmonitorbackend.entity.AbsenceRecord">
        SELECT * FROM hrbp_absence_result ORDER BY create_time DESC
    </select>
    <select id="findById" parameterType="java.lang.Long" resultType="com.example.flinkmonitorbackend.entity.AbsenceRecord">
        SELECT * FROM hrbp_absence_result WHERE id = #{id}
    </select>
    <update id="update" parameterType="com.example.flinkmonitorbackend.entity.AbsenceRecord">
        UPDATE hrbp_absence_result 
        SET 
            reason = #{reason},
            image_url = #{imageUrl},
            preventive_measures = #{preventiveMeasures},
            flag = #{flag}
        WHERE id = #{id}
    </update>
</mapper>